<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Welcome to Panimutlu.com</title>

<link rel="shortcut icon" href="http://www.panimutlu.com/images/favicon.ico">
<link rel="large icon" href="http://www.panimutlu.com/images/favicon.ico" type="image/x-icon">
<link rel="icon" href="http://www.panimutlu.com/images/favicon.ico" type="image/x-icon">



</head>
<body>
<div class="header-wrapper">
<div class="header-main">
        <div class="logo">
        <table border="0" cellpadding="0" cellspacing="0" width="0">

         <tr><td height="120px" align="center" valign="middle"><%= link_to image_tag("logo.png", alt: "logo panimutlu"), '/static_pages/home' %>
            </td></tr></table>
      </div>
        <div class="header-right">
            <table border="0" cellpadding="0" cellspacing="0">
            <tbody><tr>
           
           <td style="background:url(../assets/header-style-bg.png) repeat-y;" align="center" valign="middle" width="220"><%= link_to image_tag("contact-img.png", alt: "Rails"), '#' %>
           <% if !csigned_in? && !signed_in? %>
                 <td style="background:url(../assets/header-style-bg.png) repeat-y;" align="center" valign="middle" width="220"> <a href="/recruitersignin" class="login-btn">Recruiter</a></td>
                 <%end%>
          
            <td style="background:url(../assets/header-style-bg.png) repeat-y;" align="right" height="60" valign="middle" width="220">

            <% if  signed_in?%>

              <a href="/signout" class="login-btn">Logout</a>
              <% elsif csigned_in?%> 
              <a href="/csignout" class="login-btn">Logout</a>

                   
             <%else%>

            <a href="/signin" class="login-btn">Login</a>
            <a href="/users/new" class="register-btn">Register</a></td>
            <%end%>
            </tr>
            <tr>
            <td colspan="3" height="65">
                <div class="main-nav">
          <ul id="menu">

                   <li><a href="/static_pages/home" style="margin-right:15px;">Home</a></li>





                       <% if  signed_in?%>
                    <li><a href="/jobs"  style="margin-right:15px;">Jobs</a></li>
                     <li><a href="/trainings" style="margin-right:15px;">Training</a></li>
                    <%elsif csigned_in? %>
                    <li><a href="/jobsapplied"  style="margin-right:15px;">Jobs list</a></li>
                     <li><a href="/trainingsapplied" style="margin-right:15px;">Training list</a></li>
                      <%else%>

                     <li><a href="/static_pages/jobs"  style="margin-right:15px;">Jobs</a></li>
                      <li><a href="/static_pages/training" style="margin-right:15px;">Training</a></li>
                     <%end%>

                    <li><a href="/static_pages/csr" style="margin-right:15px;">CSR</a></li>
                    <li><a href="/static_pages/about">About</a></li>

                 </ul>
              </div>
            </td>
            </tr>
            </tbody></table>
    </div>
  </div>
</div>
<% if flash[:notice] %>
<div style="width:100%; height:32px;line-height:32px; text-align:center; color:#2E2E2E;float:left;font-size:16px;"><%= flash[:notice]%></div>
<%end%>
<%= yield %>

<div class="footer-wrapper">
    <div class="footer-main">
        <div class="footer-left">
            <a href="/static_pages/home">Home</a>
            <a href="/static_pages/about">About</a>
            <a href="#">Blog</a>
            <a href="#">Contact</a>
        </div>
        <div class="footer-right">
            Copyright Â© 2014 Panimutlu.com All Rights Reserved.
